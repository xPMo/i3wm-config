
# =========================================================
# Workspace settings
# =========================================================

# back-and-forth on $mod+Tab
exec xset -r 23 # disable auto-repeat
bindsym $mod+Tab workspace back_and_forth
bindsym $mod+Tab --release workspace back_and_forth

# Numbered on main panel, lettered on secondary
workspace 0:0 output $monitor
workspace 1:1 output $monitor
workspace 2:2 output $monitor
workspace 3:3 output $monitor
workspace 4:4 output $monitor
workspace 5:5 output $monitor
workspace 6:6 output $monitor
workspace 7:7 output $monitor
workspace 8:8 output $monitor
workspace "20:." output $monitor2
workspace "21:A" output $monitor2
workspace "22:B" output $monitor2
workspace "23:C" output $monitor2
workspace "24:D" output $monitor2
workspace "25:E" output $monitor2
workspace "26:F" output $monitor2
workspace "27:G" output $monitor2
workspace "28:H" output $monitor2

# Specialty workspaces
workspace "12:WWW" output $monitor
workspace "32:WW2" output $monitor2
workspace "11:~$" output $monitor
workspace "31:~#" output $monitor2
workspace "♫" output $monitor2

# switch to workspace
bindsym $mod+grave workspace 0:0
bindsym $mod+1 workspace 1:1
bindsym $mod+2 workspace 2:2
bindsym $mod+3 workspace 3:3
bindsym $mod+4 workspace 4:4
bindsym $mod+5 workspace 5:5
bindsym $mod+6 workspace 6:6
bindsym $mod+7 workspace 7:7
bindsym $mod+8 workspace 8:8
bindsym $mod2+grave workspace "20:."
bindsym $mod2+1 workspace "21:A"
bindsym $mod2+2 workspace "22:B"
bindsym $mod2+3 workspace "23:C"
bindsym $mod2+4 workspace "24:D"
bindsym $mod2+5 workspace "25:E"
bindsym $mod2+6 workspace "26:F"
bindsym $mod2+7 workspace "27:G"
bindsym $mod2+8 workspace "28:H"

bindsym $mod2+m workspace "♫"
bindsym $mod+comma workspace "♞"

# move focused container to workspace
bindsym $mod+Shift+grave move container to workspace 0:0
bindsym $mod+Shift+1 move container to workspace 1:1
bindsym $mod+Shift+2 move container to workspace 2:2
bindsym $mod+Shift+3 move container to workspace 3:3
bindsym $mod+Shift+4 move container to workspace 4:4
bindsym $mod+Shift+5 move container to workspace 5:5
bindsym $mod+Shift+6 move container to workspace 6:6
bindsym $mod+Shift+7 move container to workspace 7:7
bindsym $mod+Shift+8 move container to workspace 8:8
bindsym $mod2+Shift+grave move container to workspace "20:."
bindsym $mod2+Shift+1 move container to workspace "21:A"
bindsym $mod2+Shift+2 move container to workspace "22:B"
bindsym $mod2+Shift+3 move container to workspace "23:C"
bindsym $mod2+Shift+4 move container to workspace "24:D"
bindsym $mod2+Shift+5 move container to workspace "25:E"
bindsym $mod2+Shift+6 move container to workspace "26:F"
bindsym $mod2+Shift+7 move container to workspace "27:G"
bindsym $mod2+Shift+8 move container to workspace "28:H"

bindsym $mod+Shift+XF86HomePage move container to workspace 12:WWW
bindsym $mod2+Shift+XF86HomePage move container to workspace 32:WW2

bindsym $mod+Shift+Return move container to workspace "11:~$"
bindsym $mod2+Shift+Return move container to workspace "31:~#"

bindsym $mod2+Shift+m move container to workspace ♫
bindsym $mod+Shift+comma move container to workspace ♞

# Force windows to workspaces
# Spotify is delayed in setting WM_CLASS, so this doesn't work for it
# assign [class="Spotify"] ♫
assign [class="banshee"] ♫
assign [class="Pithos"] ♫
assign [class="Pavucontrol"] ♫
assign [class="usic"] ♫
assign [class="Steam"] ♞

# bindsym $mod+$mod2+grave workspace TEST
