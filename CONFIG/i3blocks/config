# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
separator_block_width=9
markup=pango

[cpu]
label=<small></small>
command=$HOME/.local/bin/i3blocks-cpu --button $BLOCK_BUTTON
interval=5
#min_width=CPU: 100.00%
#separator=false

[memory]
label=<small></small>
command=/usr/share/i3blocks/memory
interval=20
#separator=false
#separator_block_width=3


# I've never had problems with swap, so forget about it.
#[swap]
#label=
#instance=swap
#command=/usr/share/i3blocks/memory
#interval=40

# custom disk command to both used and total
[disk-root]
label=<small></small>
instance=/
command=$HOME/.local/bin/i3blocks-disk
interval=30

[disk-home]
label=<small></small>
instance=/home
command=$HOME/.local/bin/i3blocks-disk
interval=30

[radeon-pci-0100]
command=$HOME/.local/bin/i3blocks-temp --chip $BLOCK_NAME --button $BLOCK_BUTTON
interval=10

[coretemp-isa-0000]
# Not sure if i3blocks is setting environment incorrectly or if perl isn't reading it
command=$HOME/.local/bin/i3blocks-temp --chip $BLOCK_NAME --index 2 --button $BLOCK_BUTTON
interval=10

[wireless]
label=<small></small>
instance=wlo1
command=$HOME/.local/bin/i3blocks-network
color=#85c000
interval=20
separator=false
separator_block_width=3

[wireless]
label=<small></small>
instance=wlp4s6
command=$HOME/.local/bin/i3blocks-network
color=#85c000
interval=20
separator=false
separator_block_width=3

[wireless]
label=<small></small>
instance=bnep0
command=$HOME/.local/bin/i3blocks-network
color=#85c000
interval=20
separator=false
separator_block_width=3

[usb-ethernet]
label=<small></small>
instance=enp0s29u1u2
command=$HOME/.local/bin/i3blocks-network
color=#85c000
interval=20
separator=false
separator_block_width=3

[ethernet]
label=E
instance=enp3s0
command=$HOME/.local/bin/i3blocks-network
color=#85c000
interval=20

[ethernet]
label=E
instance=enp0s25
command=$HOME/.local/bin/i3blocks-network
color=#85c000
interval=20


[brightness]
label=☀
command=printf "%.0f%%" $(light -s acpi_video0 -G)
interval=once
signal=2

[playerctl]
label=♪
command=$HOME/.local/bin/i3blocks-playerctl
signal=11

[volume]
command=$HOME/.local/bin/i3blocks-volume
interval=once
signal=10

[battery]
command=$HOME/.local/bin/i3blocks-battery
interval=30

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=5
