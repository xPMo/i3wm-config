
# ====================================================
# Things to run on startup
# ====================================================

# urxvtd
exec --no-startup-id urxvtd --quiet --opendisplay --fork

# Inhibit sleep and power buttons
exec systemd-inhibit --what=handle-power-key:handle-suspend-key \
	--who=i3wm --why="Handle power control in i3" sleep infinity

# gnome-authentication-agent
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# set background, color
exec --no-startup-id exec redshift

# kb/mouse
exec --no-startup-id exec unclutter -idle 5
exec_always --no-startup-id fix_xcursor
exec_always --no-startup-id setxkbmap -symbols 'pc+us+inet(evdev)+custom'
exec --no-startup-id xset -r 23

# clipboard manager
exec --no-startup-id clipit

# KDE Connect
exec --no-startup-id kdeconnect-indicator

# launch popup terminal
exec --no-startup-id $HOME/.local/bin/popup-term

# Notification daemon
exec --no-startup-id exec dunst

# conky
exec --no-startup-id conky

# -- tray --
# pulseaudio
exec --no-startup-id pulseaudio -D
exec --no-startup-id pa-applet

# notify script, sends a signal to the i3block on media change
exec --no-startup-id $HOME/.local/lib/i3blocks/playerctlnotify.py

# begin on workspace 1
exec --no-startup-id exec swaymsg workspace 1:1

# Scratchpad terminal popup
# matches popup_* for alarm or other popups
for_window [title="^popup_"] floating enable, border none,  move scratchpad
for_window [title="^popup_term$"] resize set $dispwidth 280, move position 0 px 0 px, sticky enable
bindsym $mod+v [title="^popup_term$"] scratchpad show
